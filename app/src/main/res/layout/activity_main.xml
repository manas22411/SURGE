<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blueee"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/blue2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INNVOCON"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:textStyle="bold"
            android:textSize="55dp"/>

         <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                />

    </LinearLayout>

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the number"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColorHint="#131111"
        android:inputType="phone"
        android:gravity="center"
        android:id="@+id/phone"/>

    <EditText
        android:id="@+id/otpcode"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Enter OTP"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:textColor="#0A0909"
        android:textColorHint="#0A0909"/>


    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Resend"
        android:textColor="#861414"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextbtn"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="Next"
        android:background="#374BBD"/>



</LinearLayout>